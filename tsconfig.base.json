{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bytechat/core": ["packages/core/src"],
      "@bytechat/core/*": ["packages/core/src/*"],
      "@bytechat/ui": ["packages/ui/src"],
      "@bytechat/ui/*": ["packages/ui/src/*"],
      "@bytechat/storage": ["packages/storage/src"],
      "@bytechat/storage/*": ["packages/storage/src/*"],
      "@bytechat/network": ["packages/network/src"],
      "@bytechat/network/*": ["packages/network/src/*"]
    }
  }
}
