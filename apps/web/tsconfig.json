{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@bytechat/core": ["../../packages/core/src"],
      "@bytechat/core/*": ["../../packages/core/src/*"],
      "@bytechat/ui": ["../../packages/ui/src"],
      "@bytechat/ui/*": ["../../packages/ui/src/*"],
      "@bytechat/network": ["../../packages/network/src"],
      "@bytechat/network/*": ["../../packages/network/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
